@model IEnumerable<OnlineStoreCORE.Product>


@{
    ViewBag.Title = "Index";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    @if (@User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        
        <p class="btn" style="margin-top: 27px;">
            <input  onclick="location.href='@Url.Action("Create", "Products")'" class="btn btn-dark btn-lg w-100" name="create new" value="Create">
           

        </p>
    }
   
    <div class="row px-5 pt-5">


        @foreach (var item in Model)
        {
            <div class="col-md-4 mt-4 mt-sm-0 card-container">
                <div class="card text-center product p-4 pt-5 border-0 h-100 rounded-0">

                    <div class="card-body p-4 py-0 h-xs-440p">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            
    
                            <div class="carousel-inner">

                                <div class="item active ">
                                    <img src="https://mdbootstrap.com/img/Marketing/mdb-press-pack/mdb-main.jpg" >
                                    <div class="carousel-caption">
                                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                        <p>@Html.DisplayFor(modelItem => item.Price)</p>

                                    </div>
                                </div>
                                @for (int i = 1; i < item.Images.Count; i++)
                                {
                                    var imag = item.Images[i];
                                    <div class="item ">
                                        <img src=@imag.path alt=@imag.path>
                                        <div class="carousel-caption">
                                            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                            <p>@Html.DisplayFor(modelItem => item.Price)</p>

                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>



                    @*<div class="card-body p-4 py-0 h-xs-440p">
                        <h5 class="card-title font-weight-semi-bold mb-3 w-xl-220p mx-auto">@Html.DisplayFor(modelItem => item.Images)</h5>
                        <p class="price">@Html.DisplayFor(modelItem => item.Price)</p>
